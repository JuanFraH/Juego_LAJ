import greenfoot.*;  // (World, Actor, GreenfootImage, Greenfoot and MouseInfo)

/**
 * Write a description of class Ship here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */
public class A_Ship extends Actor
{
    int x;
    public boolean existea = false;
    public boolean nace = false;
    private int timeElapsed2;
    private int timeCounter2;
    int golpe = 0;
    
    public A_Ship(){
        setImage("ship.png");
    }
    
    public void act()
    {
        Actor Frasco;
        Frasco = getOneObjectAtOffset(0,0,Frasco.class);
        Escenario escenario = (Escenario) getWorld();
        if (Frasco != null){
            getWorld().removeObject(Frasco);
            if (golpe == 0){
                setImage("ship1.png");
            }
            if (golpe == 1){
                setImage("ship2.png");
            }
            if (golpe == 2){
                getWorld().removeObject(this);
                Greenfoot.stop();
            }
            golpe++;
        }
        setRotation(180);
        
        if (Greenfoot.isKeyDown("A")){
            move (6);
        }
        if (Greenfoot.isKeyDown("D")){
            move (-6);
        }
        if (Greenfoot.isKeyDown("space") && existea == false){
            timeCounter2 = 0;
            timeElapsed2 = 0;
            gancho();
            existea = true;
            timeCounter2=0;
            timeElapsed2=0;
            nace = true;
        }
        if (nace == true){  
            timeCounter2 = (timeCounter2+1)%(40);
            if (timeCounter2 == 0)
            {
            timeElapsed2++;
            int b = Greenfoot.getRandomNumber(2);
            timeElapsed2 = 0;
            existea = false;
            nace = false;
        }
        }
    
    
    }
    public void gancho(){
        Gancho gancho1 = new Gancho();
        getWorld().addObject(gancho1,getX(),440);
    }
}

