import greenfoot.*;  // (World, Actor, GreenfootImage, Greenfoot and MouseInfo)

/**
 * Write a description of class Peces here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */
public class Peces extends Actor
{
    int obj = Greenfoot.getRandomNumber(6);
    
    public Peces(){
        switch (obj){
            case 0:
                peza();
                break;
            case 1:
                pezr();
                break;
            case 2:
                pezv();
                break;
            case 3:
                pezn();
                break;
            case 4:
                pezm();
                break;
            case 5:
                pezb();
                break;
        }
    }
    /**
     * Act - do whatever the Peces wants to do. This method is called whenever
     * the 'Act' or 'Run' button gets pressed in the environment.
     */
    public void peza(){
        setImage("Peza.png");
        GreenfootImage myImage = getImage();
        int myNewHeight = (int)myImage.getHeight()*5/8;
        int myNewWidth = (int)myImage.getWidth()*5/8;
        myImage.scale(myNewWidth,myNewHeight);
    }
    public void pezr(){
        setImage("Pezr.png");
        GreenfootImage myImage = getImage();
        int myNewHeight = (int)myImage.getHeight()*5/8;
        int myNewWidth = (int)myImage.getWidth()*5/8;
        myImage.scale(myNewWidth,myNewHeight);
    }
    public void pezv(){
        setImage("Pezv.png");
        GreenfootImage myImage = getImage();
        int myNewHeight = (int)myImage.getHeight()*5/8;
        int myNewWidth = (int)myImage.getWidth()*5/8;
        myImage.scale(myNewWidth,myNewHeight);
    }
    public void pezn(){
        setImage("Pezn.png");
        GreenfootImage myImage = getImage();
        int myNewHeight = (int)myImage.getHeight()*5/8;
        int myNewWidth = (int)myImage.getWidth()*5/8;
        myImage.scale(myNewWidth,myNewHeight);
    }
    public void pezm(){
        setImage("Pezm.png");
        GreenfootImage myImage = getImage();
        int myNewHeight = (int)myImage.getHeight()*5/8;
        int myNewWidth = (int)myImage.getWidth()*5/8;
        myImage.scale(myNewWidth,myNewHeight);
    }
    public void pezb(){
        setImage("Pezb.png");
        GreenfootImage myImage = getImage();
        int myNewHeight = (int)myImage.getHeight()*5/8;
        int myNewWidth = (int)myImage.getWidth()*5/8;
        myImage.scale(myNewWidth,myNewHeight);
    }
    int a = 2;
    public void act()
    {
        setLocation(getX()+a, getY());
        if (isAtEdge()){
            a = a*-1;
           getImage().mirrorHorizontally();
        }
    }
}
