    int a = Greenfoot.getRandomNumber(4);
    int tim;
    int x = Greenfoot.getRandomNumber(5);
    
    public void act(){
          switch (x){
            case 0:
                tim = 68;
                break;
            case 1:
                tim = 82;
                break;
            case 2:
                tim = 96;
                break;
            case 3:
                tim = 110;
                break;
            case 4:
                tim = 125;
                break;
        }
        
    
        timeCounter = (timeCounter+1)%(tim);
        if (timeCounter == 0)
        {
        timeElapsed++;
        int b = Greenfoot.getRandomNumber(2);
        for (int i = 0; i <= b; i++){
            frasco();
        }
        timeElapsed = 0;
        x = Greenfoot.getRandomNumber(5);   
        }
    
    }
    private void frasco(){
        int xfrasco;
